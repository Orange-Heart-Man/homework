<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.springboot.mapper.TbUserMapper">
    
    <resultMap type="com.house.springboot.bean.TbUser" id="TbUserResult">
        <result property="id"    column="id"    />
        <result property="username"    column="username"    />
        <result property="password"    column="password"    />
        <result property="phone"    column="phone"    />
        <result property="housenum"    column="housenum"    />
        <result property="role"    column="role"    />
    </resultMap>

    <sql id="selectTbUserVo">
        select id, username, password, phone, role from tb_user
    </sql>

    <select id="selectTbUserList" parameterType="com.house.springboot.bean.TbUser" resultMap="TbUserResult">
        select tbu.*,count(house_id) housenum from tb_user tbu
        LEFT JOIN tb_order tbo on tbu.id=tbo.user_id
        <where>  
            <if test="username != null  and username != ''"> and tbu.username like concat('%', #{username}, '%')</if>
            <if test="password != null  and password != ''"> and tbu.password= #{password}</if>
            <if test="role != null  and role != ''"> and tbu.role= #{role}</if>
        </where>

        GROUP BY tbu.id,tbu.username,tbu.phone
    </select>
    
    <select id="selectTbUserById" parameterType="Long" resultMap="TbUserResult">
        <include refid="selectTbUserVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTbUser" parameterType="com.house.springboot.bean.TbUser" useGeneratedKeys="true" keyProperty="id">
        insert into tb_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="phone != null">phone,</if>
            <if test="role != null">role,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="phone != null">#{phone},</if>
            <if test="role != null">#{role},</if>
         </trim>
    </insert>

    <update id="updateTbUser" parameterType="com.house.springboot.bean.TbUser">
        update tb_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="role != null">role = #{role},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbUserById" parameterType="Long">
        delete from tb_user where id = #{id}
    </delete>

    <delete id="deleteTbUserByIds" parameterType="String">
        delete from tb_user where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
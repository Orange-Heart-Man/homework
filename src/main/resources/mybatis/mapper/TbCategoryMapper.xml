<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.springboot.mapper.TbCategoryMapper">
    
    <resultMap type="com.house.springboot.bean.TbCategory" id="TbCategoryResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="createtime"    column="createtime"    />
    </resultMap>

    <sql id="selectTbCategoryVo">
        select id, name, createtime from tb_category
    </sql>

    <select id="selectTbCategoryList" parameterType="com.house.springboot.bean.TbCategory" resultMap="TbCategoryResult">
        <include refid="selectTbCategoryVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="createtime != null "> and createtime = #{createtime}</if>
        </where>
    </select>
    
    <select id="selectTbCategoryById" parameterType="Long" resultMap="TbCategoryResult">
        <include refid="selectTbCategoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTbCategory" parameterType="com.house.springboot.bean.TbCategory" useGeneratedKeys="true" keyProperty="id">
        insert into tb_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            createtime
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateTbCategory" parameterType="com.house.springboot.bean.TbCategory">
        update tb_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="createtime != null">createtime = #{createtime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbCategoryById" parameterType="Long">
        delete from tb_category where id = #{id}
    </delete>

    <delete id="deleteTbCategoryByIds" parameterType="String">
        delete from tb_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>